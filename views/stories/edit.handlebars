<h3 class="center-align">Edit story</h3>
<div class="row">
    <form action="/stories/{{story.id}}?_method=put" method="POST" class="col s12">
        <div class="row center-align">
            <div class="input-field">
                <input type="text" name="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status">
                    {{#select story.status}}

                    <option value="private">Private</option>
                    <option value="public">Public</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments}} checked="checked" {{/if}}>
                <label for="filled-in-box">Allow Comments</label>
            </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell your story</h5>
                <textarea name="body">{{story.body}}</textarea>
            </div>
        </div>
        <input type="submit" value="Update" onclick="Materialize.toast('Story updated', 4000, 'rounded')" class="btn indigo lighten-1">
    </form>
</div>