<h3 class="center-align">Stories</h3>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4 mb-5">
            <div class="card hoverable">
                <div class="card-image">
                    <a href="/stories/{{id}}/edit" class="btn-floating halfway-fab amber darken-3 waves-effect"><i class="fa fa-pencil-alt fa-1x"></i></a>
                </div>
                <div class="card-content center-align">
                    <span class="card-title">{{title}}</span>
                    <p class="card-text truncate">{{stripTags body}}</p>
                    <br>
                      <div class="chip">
                        <img src="{{user.image}}">
                        {{user.firstName}} {{user.lastName}}
                    </div>
                </div>
                <div class="card-action right-align">
                    <a href="/stories/{{id}}">Read more <i class="fa fa-chevron-right"></i></a>
                </div>
            </div>
        </div>
    {{else}}
        <h5 class="center-align">No stories found</h5>
    {{/each}}
</div>
